extends ../public/pug/layouts/main
block head-main
    - $headerShow = true
    - $footerShow = true
block style-main

block content-main
    .zs-sign
        .zs-sign-content
            .sign-box
                .row
                    .left
                        img(src="/images/sign_bg_01.jpg" height="100%")
                    .right
                        a.logo(href="index.html")
                            img(src="images/sign_logo.png" width="100%")
                        form.form
                            .form-group
                                input.form-control(type="text" value="" name="phone" id="phone")
                                label.label 手机号
                            .form-group
                                input.form-control(type="password" value="" name="password" id="password")
                                label.label 登录密码
                            .form-group.clearfix.forget
                                a(href="忘记密码.html").float-right 忘记密码
                            .form-btn.row.justify-content-between
                                a(href="注册.html").btn.login.col-10 免费注册
                                a(href="忘记密码.html").btn.submit.col-13 登录
block script-main
    script.
        $(function () {
            $("input").bind('blur', function () {
                if ($(this).val()) {
                    $(this).addClass("form-textbox-entered")
                } else {
                    $(this).removeClass("form-textbox-entered")
                }
            })

            $("input").each(function () {
                var vl = $(this).val();
                var _this = $(this);
                if (vl != "") {
                    _this.addClass("form-textbox-entered")
                } else {
                    _this.removeClass("form-textbox-entered")
                }
            })
        })

