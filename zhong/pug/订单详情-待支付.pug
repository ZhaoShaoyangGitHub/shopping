extends ../public/pug/layouts/main
block head-main
    -var $active = ""
    -var $hasInvoice = true
block style-main
block content-main
    .order-detail
        .container
            .title.font-weight-bold 你的订单详情
            .product-top.row.align-items-center
                .col-md-8
                    .img
                        img(src="images/img_04.jpg" width="100%")
                .col-md-16.info
                    .name.font-weight-bold 纯天然墨脱石锅
                    .row.justify-content-between
                        .price.font-weight-bold
                            span.font-md.w-title 商品价格
                            span.font-sm.fontArial RMB 3600.00
                        .identifier.color-2
                            span.font-md.w-title 订单编号
                            span.font-sm.fontArial.w-txt W427960922
                    .row.justify-content-between
                        .number.font-weight-bold
                            span.font-md.w-title 购买数量
                            span.font-sm.fontArial 2
                        .date.color-2
                            span.font-md.w-title 下单时间
                            span.font-sm.fontArial.w-txt 2019/03/10
                    .row
                        .staus.font-weight-bold
                            span.font-md.w-title 待支付
                            span.font-sm.fontArial 2019/03/10
                            span.warning 请在一小时内进行支付，否则系统会自动取消订单
            .order-content
                .row
                    .col-md-8.order-title.font-weight-bold 送货详情
                    .col-md-8.paddingLeft
                        .font-md.font-weight-bold.marginBottom 送货地址：
                        .font-sm.color-2
                            p 上海，虹口区
                            p 广粤路835弄，1号楼601室
                    .col-md-8
                        .font-md.font-weight-bold.marginBottom 联系信息：
                        .font-sm.color-2
                            p 王泽祥
                            p 17521035241
                .row
                    .col-md-8.order-title.font-weight-bold 发票
                    .col-md-16.paddingLeft
                        if($hasInvoice)
                            .no-invoice
                                p 您已选择不开具发票
                        else
                            .has-invoice
                                .title 增值税专用发票
                                .main
                                    p 今日捷财
                                    p xxxxxxxxxxxxxxxxxxxxxx
                                    p 上海市，虹口区，凉城，广粤路835弄1号楼601
                                    p 400-088-11
                                    p 上海交通银行凉城支行
                                    p xxxxxxxxxxxxxxxxxxxxxx
                .row
                    .col-md-8.order-title.font-weight-bold 订单备注
                    .col-md-16.paddingLeft.font-md.color-2.font-weight-bold 录入的备注内容会在订单详情页显示
                .content3
                    .row
                        .left.col-md-13
                            .form-group
                                input.form-control.form-textbox-entered(type="text" value="" name="remarks" id="remarks" placeholder="如需备注，请输入..")
                                label.label 订单备注

                    .total-box.row
                        .left.col-md-8.col-5
                            span 总计
                        .right.col-md-16.col-19
                            .main
                                .item.row
                                    .item-title 运费：
                                    .text RMB 100.00
                                .item.row
                                    .item-title 商品价格：
                                    .text RMB 3600.00

                .content4.row
                    .col-md-8
                    .right.col-md-16
                        .top.row
                            .top-l 合计
                            .top-r
                                .money
                                    span RMB
                                    span 3700.00
                        .center.row
                            .name 选择支付方式
                            .choose.active
                                img(src="/images/icon_zfb.png")
                            .choose
                                img(src="/images/icon_wx.png")
                        .bottom
                            input.submit-btn(type="submit" value="立即支付")