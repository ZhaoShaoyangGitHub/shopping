extends ../public/pug/layouts/main
block head-main
    - $headerShow = true
    - $footerShow = true
block style-main

block content-main
    .zs-sign
        .zs-sign-content
            .sign-box
                .row
                    .left
                        img(src="/images/sign_bg_01.jpg" height="100%")
                        .text 皂石食器·成就食物之美
                    .right
                        a.logo(href="index.html")
                            img(src="images/sign_logo.png" width="100%")
                        form.form
                            .form-group
                                input.form-control(type="text" value="" name="phone" id="phone")
                                label.label 手机号
                                p.warning 中国大陆 +86
                            .form-group
                                input.form-control(type="password" value="" name="password" id="password")
                                label.label 设置新密码
                            .form-group
                                input.form-control(type="text" value="" name="code" id="code")
                                .send-code.btn.js-send 获取验证码
                                label.label 验证码
                            .form-btn.row.justify-content-between
                                a(href="登录.html").btn.login.col-10 返回登录
                                a(href="忘记密码.html").btn.submit.col-13 重置密码
block script-main
    script.
        $(function () {
            $("input").bind('blur', function () {
                if ($(this).val()) {
                    $(this).addClass("form-textbox-entered")
                } else {
                    $(this).removeClass("form-textbox-entered")
                }
            })

            $("input").each(function () {
                var vl = $(this).val();
                var _this = $(this);
                if (vl != "") {
                    _this.addClass("form-textbox-entered")
                } else {
                    _this.removeClass("form-textbox-entered")
                }
            })
        })

